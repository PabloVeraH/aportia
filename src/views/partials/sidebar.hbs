<aside class="w-64 bg-white dark:bg-slate-800 border-r border-slate-200 dark:border-slate-700 hidden md:flex flex-col">
  <div class="h-16 flex items-center px-6 border-b border-slate-200 dark:border-slate-700">
    <span class="text-xl font-bold text-primary-600 dark:text-primary-500">HelpChain</span>
  </div>
  <nav class="flex-1 p-4 space-y-1">
    <a href="/dashboard"
      class="flex items-center px-4 py-2 text-sm font-medium rounded-lg bg-primary-50 text-primary-700 dark:bg-slate-700 dark:text-white">
      Dashboard
    </a>
    <a href="/donations"
      class="flex items-center px-4 py-2 text-sm font-medium rounded-lg text-slate-600 hover:bg-slate-50 dark:text-slate-300 dark:hover:bg-slate-700">
      Donaciones
    </a>
  </nav>
  <div class="p-4 border-t border-slate-200 dark:border-slate-700">
    {{#if user}}
    <div class="flex items-center gap-3">
      <div
        class="w-8 h-8 rounded-full bg-primary-100 flex items-center justify-center text-primary-700 font-bold overflow-hidden">
        <span class="uppercase">{{ user.email.[0] }}</span>
      </div>
      <div class="flex-1 min-w-0">
        <p class="text-sm font-medium text-slate-900 dark:text-white truncate" title="{{user.email}}">
          {{ user.email }}
        </p>
      </div>
    </div>
    {{/if}}
  </div>
</aside>