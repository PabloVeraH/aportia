<header
  class="bg-white dark:bg-slate-800 border-b border-slate-200 dark:border-slate-700 h-16 flex items-center justify-between px-6">
  <div class="flex items-center gap-4">
    <!-- Mobile menu button could go here -->
    <div class="hidden md:flex items-center text-slate-500 dark:text-slate-400 text-sm font-medium">
      HelpChain
    </div>

    <!-- Context Switcher -->
    {{#if myCenters.length}}
    <div class="relative ml-4">
      <form action="/dashboard/switch-center" method="POST" id="centerSwitcherForm">
        <input type="hidden" name="_csrf" value="{{csrfToken}}">
        <select name="center_id" onchange="this.form.submit()"
          class="pl-3 pr-10 py-1.5 text-sm border-gray-300 focus:outline-none focus:ring-primary-500 focus:border-primary-500 sm:text-sm rounded-md dark:bg-slate-700 dark:border-slate-600 dark:text-white">
          {{#each myCenters}}
          <option value="{{this.id}}" {{#if (eq this.id ../activeCenterId)}}selected{{/if}}>
            {{this.name}}
          </option>
          {{/each}}
        </select>
      </form>
    </div>
    {{/if}}
  </div>

  <div class="flex items-center gap-4">
    <a href="/auth/logout"
      class="text-sm font-medium text-slate-600 hover:text-slate-900 dark:text-slate-300 dark:hover:text-white transition-colors">
      Cerrar Sesi√≥n
    </a>
  </div>
</header>